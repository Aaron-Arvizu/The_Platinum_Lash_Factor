<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signLayout"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/background">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="825dp"
        android:layout_height="186dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/common_google_signin_btn_text_dark_pressed" />

    <Button
        android:id="@+id/doneSignBtn"
        android:layout_width="177dp"
        android:layout_height="68dp"
        android:layout_marginStart="463dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="160dp"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clearButton2"
        android:layout_width="177dp"
        android:layout_height="68dp"
        android:layout_marginStart="194dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="429dp"
        android:text="Clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/signLayout2"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:layout_marginBottom="63dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>