<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/employeeName"
        android:layout_width="419dp"
        android:layout_height="44dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="161dp"
        android:layout_marginEnd="305dp"
        android:layout_marginBottom="1047dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/employeePin"
        android:layout_width="386dp"
        android:layout_height="142dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="359dp"
        android:layout_marginEnd="283dp"
        android:layout_marginBottom="779dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addEmployeeBtn"
        android:layout_width="121dp"
        android:layout_height="140dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="721dp"
        android:layout_marginEnd="475dp"
        android:layout_marginBottom="419dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>